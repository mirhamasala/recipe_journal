<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
  <div class="form__field">
    <%= f.label :email, class: "form__label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form__input" %>
  </div>

  <div class="form__field">
    <%= f.label :password, class: "form__label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form__input" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form__field">
      <div class="form__input">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "form__label form__label--checkbox" %>
      </div>
    </div>
  <% end %>

  <div class="form__actions">
    <%= f.submit "Log in", class: "button button--full-width" %>
  </div>
<% end %>

<div class="form__links">
  <%= render "devise/shared/links" %>
</div>
