<%= form_with model: @recipe, class: "form" do |f| %>
  <div class="form__field">
    <%= f.label :name, class: "form__label form__label--required" %>
    <%= f.text_field :name, required: true, class: "form__input" %>
  </div>
  <div class="form__field">
    <%= f.label :servings, class: "form__label" %>
    <%= f.text_field :servings, class: "form__input" %>
  </div>
  <div class="form__field">
    <%= f.label(:time, "Time (in minutes)", class: "form__label") %>
    <%= f.text_field :time, class: "form__input" %>
  </div>
  <div class="form__field">
    <%= f.label :category, class: "form__label" %>
    <%= f.text_field :category, class: "form__input" %>
  </div>
  <div class="form__field">
    <%= f.label :method, class: "form__label" %>
    <%= f.text_area :method, class: "form__textarea" %>
  </div>
  <div class="form__field">
    <%= f.label :photo, class: "form__label" %>
    <%= f.file_field :photo, class: "form__input" %>
  </div>
  <%= f.hidden_field :photo_cache %>
  <div class="form__field">
    <%= f.label(:link_to_photo, "Link to original photo", class: "form__label") %>
    <%= f.text_field :link_to_photo, class: "form__input" %>
  </div>
  <div class="form__field">
    <%= f.label(:link_to_photo, "Link to original recipe", class: "form__label") %>
    <%= f.text_field :link, class: "form__input" %>
  </div>
  <div class="form__actions">
    <%= f.submit class: "button button--full-width" %>
  </div>
<% end %>
