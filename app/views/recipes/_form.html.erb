<%= simple_form_for @recipe do |f| %>
  <%= f.input :name %>
  <%= f.input :servings %>
  <%= f.input :time, label: "Time (in minutes)" %>
  <%= f.input :category %>
  <%= f.input :method %>
  <%= f.input :photo_url, label: "Photo URL" %>
  <%= f.input :link, label: "Link to original recipe" %>
  <%= f.submit class: "button" %>
<% end %>
