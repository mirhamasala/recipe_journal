<%= simple_form_for @recipe do |f| %>
  <%= f.input :name %>
  <%= f.input :servings %>
  <%= f.input :time, label: "Time (in minutes)" %>
  <%= f.input :category %>
  <%= f.input :method %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.input :link_to_photo, label: "Link to original photo" %>
  <%= f.input :link, label: "Link to original recipe" %>
  <%= f.submit class: "button recipe-form__button" %>
<% end %>
