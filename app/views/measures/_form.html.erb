<%= form_with(model: [@recipe, @measure], local: true, class: "form") do |f| %>
  <div class="form__field">
    <%= f.label :amount, class: "form__label form__label--required" %>
    <%= f.number_field :amount, step: :any, required: true, class: "form__input" %>
  </div>
  <div class="form__field">
    <%= f.label :unit, class: "form__label" %>
    <%= f.text_field :unit, class: "form__input" %>
  </div>
  <div class="form__field">
    <%= f.label :ingredient_id, class: "form__label form__label--required" %>
    <%= f.collection_select :ingredient_id, Ingredient.all.alphabetize, :id, :name, { prompt: true, required: true }, { class: "select2" } %>
  </div>
  <div class="form__actions">
    <%= f.submit "Add Measure", class: "button button--full-width" %>
  </div>
<% end %>
